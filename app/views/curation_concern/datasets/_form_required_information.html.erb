<fieldset class="required">
  <legend>Required Information</legend>

  <%= f.input :title,
              input_html: { class: 'input-xlarge' }
  %>

  <%= f.input :creator, as: :multi_value, required: true, input_html: { class: 'input-xlarge' } %>

  <%= f.input :description,
              as: :text,
              required: true,
              hint: 'Please keep your description to 300 words or less.',
              input_html: {
                class: 'input-xxxlarge',
                rows: '14'
              },
              label: 'Description'
  %>
</fieldset>
