<fieldset class="required">
  <legend>Required Information</legend>

  <%= f.input :title,
    input_html: { class: 'input-xlarge' },
    required: true
  %>

  <%= f.input :creator,
    as: :multi_value,
    required: true,
    input_html: { class: 'input-xlarge' }
  %>

  <%= f.input :requires,
    input_html: { class: 'input-xlarge' },
    required: true,
    label: "Required software",
    hint: "Special software needed to open the Dataset"
  %>

  <%= f.input :description,
    as: :text,
    required: true,
    input_html: { class: 'input-xxxlarge', rows: '14' }
  %>


</fieldset>
