<div class="alert">
  <strong>Hey!</strong> It looks like there was an issue uploading this file.
  <%= link_to "Click here to resolve this problem", edit_polymorphic_path([:curation_concern, curation_concern])%>
</div>
  <%= image_tag 'curate/missing-file-icon.png', class: " representative_image canonical-image", width:"256px" %>
  <%= render "attributes", curation_concern: curation_concern, show_characterization:false %>

  <div class="generic_file_actions form-actions">
    <%= link_to "Download this File", download_path(curation_concern), class: 'btn btn-primary disabled' %>
    <% if can? :edit, curation_concern %>
      <%= link_to edit_polymorphic_path([:curation_concern, curation_concern]), class: 'btn btn-primary'  do%>
        <i class="icon icon-warning-sign icon-white"></i> Edit this File
      <% end %>
    <% end %>
    <%= link_to "Back to #{parent.human_readable_type}", polymorphic_path([:curation_concern, parent]), class: 'btn btn-primary' %>
  </div>

